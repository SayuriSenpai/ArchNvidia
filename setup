function Packge()
{   
    echo
        if  ! which figlet python3 noto-fonts-emoji noto-fonts  ttf-dejavu noto-fonts-cjk noto-fonts-extra  python-pyqt5 > /dev/null;
        then
            clear
             echo "Plesae wait ..."
            sudo pacman -S figlet python3 noto-fonts-emoji noto-fonts  ttf-dejavu noto-fonts-cjk noto-fonts-extra --noconfirm
        fi

}


